<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.toanhuuvuong.controller.list.HRStaffController">
	<top>
		<fx:include fx:id="header" source="../common/header.fxml" />
	</top>
	<bottom>
		<fx:include fx:id="footer" source="../common/footer.fxml" />
	</bottom>
	<center>
		<VBox alignment="TOP_CENTER">
			<children>
				<fx:include fx:id="menu" source="../common/menu.fxml" />
				<HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="5.0">
					<children>
						<Label text="Quản lý CBNV-HS">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Label>
						<Label text="&gt;">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Label>
						<Label text="Quản lý nhân sự">
							<font>
								<Font name="System Bold" size="15.0" />
							</font>
						</Label>
					</children>
					<padding>
						<Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
					</padding>
				</HBox>
				<VBox style="-fx-border-color: #C4C4C4;">
					<children>
						<VBox alignment="CENTER" spacing="10.0">
							<children>
								<GridPane alignment="CENTER_LEFT">
									<columnConstraints>
										<ColumnConstraints hgrow="SOMETIMES"
											minWidth="10.0" />
										<ColumnConstraints hgrow="SOMETIMES"
											minWidth="10.0" />
									</columnConstraints>
									<rowConstraints>
										<RowConstraints vgrow="SOMETIMES" />
									</rowConstraints>
									<children>
										<HBox alignment="CENTER_LEFT" spacing="5.0">
											<children>
												<Label text="Hiển thị">
													<font>
														<Font name="System Bold" size="15.0" />
													</font>
												</Label>
												<ComboBox fx:id="perPageComboBox" prefWidth="90.0" />
												<Label text="dòng">
													<font>
														<Font name="System Bold" size="15.0" />
													</font>
												</Label>
											</children>
										</HBox>
										<HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1">
											<children>
												<Button fx:id="searchButton" mnemonicParsing="false"
													onAction="#searchButtonOnAction">
													<graphic>
														<FontAwesomeIcon iconName="SEARCH"
															size="1.5em" text="" />
													</graphic>
												</Button>
												<TextField fx:id="searchTextField"
													prefWidth="200.0" promptText="Nhập từ khóa" />
											</children>
										</HBox>
									</children>
								</GridPane>
								<GridPane>
									<columnConstraints>
										<ColumnConstraints hgrow="SOMETIMES"
											minWidth="10.0" />
										<ColumnConstraints hgrow="SOMETIMES"
											minWidth="10.0" />
									</columnConstraints>
									<rowConstraints>
										<RowConstraints vgrow="SOMETIMES" />
									</rowConstraints>
									<children>
										<HBox alignment="CENTER_RIGHT" prefHeight="40.0"
											GridPane.columnIndex="1">
											<children>
												<Button fx:id="filterButton" mnemonicParsing="false"
													onAction="#filterButtonOnAction"
													style="-fx-background-radius: 20;" text="Lọc">
													<font>
														<Font name="System Bold" size="15.0" />
													</font>
													<graphic>
														<FontAwesomeIcon iconName="FILTER" />
													</graphic>
												</Button>
											</children>
										</HBox>
										<FlowPane alignment="CENTER_LEFT" hgap="5.0"
											prefWrapLength="1200.0" vgap="5.0">
											<children>
												<TextField fx:id="codeFilterTextField"
													promptText="Mã" />
												<TextField fx:id="nameFilterTextField"
													promptText="Họ tên" />
												<TextField fx:id="phoneFilterTextField"
													promptText="Số điện thoại" />
												<ComboBox fx:id="genderFilterComboBox"
													promptText="Giới tính" />
												<ComboBox fx:id="addressFilterComboBox"
													editable="true" promptText="Địa chỉ" />
												<TextField fx:id="salaryFilterTextField"
													promptText="Lương" />
												<ComboBox fx:id="isDeletedFilterComboBox"
													promptText="Trạng thái" />
											</children>
										</FlowPane>
									</children>
								</GridPane>
								<GridPane>
									<columnConstraints>
										<ColumnConstraints hgrow="SOMETIMES"
											minWidth="10.0" />
										<ColumnConstraints hgrow="SOMETIMES"
											minWidth="10.0" />
									</columnConstraints>
									<rowConstraints>
										<RowConstraints vgrow="SOMETIMES" />
									</rowConstraints>
									<children>
										<HBox alignment="CENTER_RIGHT" spacing="5.0"
											GridPane.columnIndex="1">
											<children>
												<Button fx:id="refreshButton" mnemonicParsing="false"
													onAction="#refreshButtonOnAction"
													style="-fx-background-radius: 20;" text="Làm mới">
													<font>
														<Font name="System Bold" size="15.0" />
													</font>
													<graphic>
														<FontAwesomeIcon iconName="REFRESH" />
													</graphic>
												</Button>
												<Button fx:id="exportCSVButton"
													mnemonicParsing="false" onAction="#exportCSVButtonOnAction"
													style="-fx-background-radius: 20;" text="Xuất CSV">
													<font>
														<Font name="System Bold" size="15.0" />
													</font>
													<graphic>
														<FontAwesomeIcon iconName="FILE" />
													</graphic>
												</Button>
												<MenuButton fx:id="showHideColMenuButton"
													mnemonicParsing="false" style="-fx-background-radius: 20;"
													text="Ẩn/hiện cột">
													<items>
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Ảnh" />
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Mã" />
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Họ tên" />
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Số điện thoại" />
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Giới tính" />
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Ngày sinh" />
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Địa chỉ" />
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Lương" />
														<CheckMenuItem mnemonicParsing="false"
															selected="true" text="Trạng thái" />
													</items>
													<font>
														<Font name="System Bold" size="15.0" />
													</font>
													<graphic>
														<FontAwesomeIcon iconName="TABLE" />
													</graphic>
												</MenuButton>
											</children>
										</HBox>
										<HBox alignment="CENTER_LEFT" spacing="5.0">
											<children>
												<Button fx:id="insertButton" mnemonicParsing="false"
													onAction="#insertButtonOnAction"
													style="-fx-background-color: #23DB1F; -fx-background-radius: 20;"
													text="Thêm nhân sự">
													<font>
														<Font name="System Bold" size="15.0" />
													</font>
													<graphic>
														<FontAwesomeIcon iconName="PLUS" />
													</graphic>
												</Button>
												<Button fx:id="updateButton" mnemonicParsing="false"
													onAction="#updateButtonOnAction"
													style="-fx-background-color: #23DB1F; -fx-background-radius: 20;"
													text="Sửa" visible="false">
													<font>
														<Font name="System Bold" size="12.0" />
													</font>
													<graphic>
														<FontAwesomeIcon iconName="EDIT" />
													</graphic>
												</Button>
												<Button fx:id="detailButton" mnemonicParsing="false"
													onAction="#detailButtonOnAction"
													style="-fx-background-color: #23DB1F; -fx-background-radius: 20;"
													text="Xem chi tiết" visible="false">
													<font>
														<Font name="System Bold" size="12.0" />
													</font>
													<graphic>
														<FontAwesomeIcon iconName="EYE" />
													</graphic>
												</Button>
											</children>
										</HBox>
									</children>
								</GridPane>
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</VBox>
						<StackPane>
							<children>
								<ListView fx:id="listView" visible="false" />
								<TableView fx:id="tableView">
									<columns>
										<TableColumn fx:id="avatarPathCol"
											prefWidth="-1.0" text="Ảnh">
											<graphic>
												<FontAwesomeIcon iconName="IMAGE" />
											</graphic>
										</TableColumn>
										<TableColumn fx:id="codeCol" prefWidth="-1.0"
											text="Mã">
											<graphic>
												<FontAwesomeIcon iconName="CODE" />
											</graphic>
										</TableColumn>
										<TableColumn fx:id="nameCol" prefWidth="-1.0"
											text="Họ tên">
											<graphic>
												<FontAwesomeIcon iconName="FONT" />
											</graphic>
										</TableColumn>
										<TableColumn fx:id="phoneCol" prefWidth="-1.0"
											text="Số điện thoại">
											<graphic>
												<FontAwesomeIcon iconName="PHONE" />
											</graphic>
										</TableColumn>
										<TableColumn fx:id="genderCol" prefWidth="-1.0"
											text="Giới tính">
											<graphic>
												<FontAwesomeIcon iconName="TRANSGENDER" />
											</graphic>
										</TableColumn>
										<TableColumn fx:id="birthCol" prefWidth="-1.0"
											text="Ngày sinh">
											<graphic>
												<FontAwesomeIcon iconName="CALENDAR" />
											</graphic>
										</TableColumn>
										<TableColumn fx:id="addressCol" prefWidth="-1.0"
											text="Địa chỉ">
											<graphic>
												<FontAwesomeIcon iconName="HOME" />
											</graphic>
										</TableColumn>
										<TableColumn fx:id="salaryCol" prefWidth="-1.0"
											text="Lương">
											<graphic>
												<FontAwesomeIcon iconName="MONEY" />
											</graphic>
										</TableColumn>
										<TableColumn fx:id="isDeletedCol" prefWidth="-1.0"
											text="Trạng thái">
											<graphic>
												<FontAwesomeIcon iconName="LOCK" text="" />
											</graphic>
										</TableColumn>
									</columns>
									<columnResizePolicy>
										<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
									</columnResizePolicy>
								</TableView>
							</children>
						</StackPane>
						<Pagination id="pagination" fx:id="pagination"
							maxPageIndicatorCount="3" prefHeight="50.0" />
					</children>
				</VBox>
			</children>
		</VBox>
	</center>
</BorderPane>
