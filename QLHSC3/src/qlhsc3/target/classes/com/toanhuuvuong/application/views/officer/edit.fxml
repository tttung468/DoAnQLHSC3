            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <padding>
            <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" GridPane.columnSpan="4">
               <children>
                  <Label fx:id="titleLabel" text="THÊM/XÓA/SỬA CÁN BỘ" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox alignment="CENTER" spacing="10.0" GridPane.columnSpan="4" GridPane.rowIndex="1">
               <children>
                  <Circle fx:id="avatarCircle" fill="DODGERBLUE" radius="100.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
                  <Button mnemonicParsing="false" onAction="#chooseAvatarButtonOnAction" text="Chọn file ảnh" />
               </children>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="3">
               <children>
                  <Label text="Mã cán bộ">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label text="(*)" textFill="RED">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="3">
               <children>
                  <Label text="Họ tên">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label text="(*)" textFill="RED">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <TextField fx:id="codeTextField" onKeyReleased="#codeTextFieldOnKeyReleased" prefWidth="200.0" promptText="Nhập mã cán bộ" style="-fx-background-radius: 20;">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="3" GridPane.rowIndex="3">
               <children>
                  <TextField fx:id="nameTextField" onKeyReleased="#nameTextFieldOnKeyReleased" prefWidth="300.0" promptText="Nhập họ tên cán bộ" style="-fx-background-radius: 20;">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="5">
               <children>
                  <Label text="Số điện thoại">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label text="(*)" textFill="RED">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <children>
                  <TextField fx:id="phoneTextField" onKeyReleased="#phoneTextFieldOnKeyReleased" prefWidth="200.0" promptText="Nhập số điện thoại" style="-fx-background-radius: 20;">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="5">
               <children>
                  <Label text="Giới tính">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label text="(*)" textFill="RED">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="7">
               <children>
                  <Label text="Ngày sinh">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label text="(*)" textFill="RED">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="7">
               <children>
                  <Label text="Địa chỉ">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label text="(*)" textFill="RED">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="9">
               <children>
                  <Label text="Lương">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="3" GridPane.rowIndex="5">
               <children>
                  <RadioButton mnemonicParsing="false" selected="true" text="Nam">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <padding>
                        <Insets left="4.0" top="4.0" />
                     </padding>
                     <toggleGroup>
                        <ToggleGroup fx:id="genderToggleGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Nữ" toggleGroup="$genderToggleGroup">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" top="4.0" />
                     </padding>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Khác" toggleGroup="$genderToggleGroup">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" top="4.0" />
                     </padding>
                  </RadioButton>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="7">
               <children>
                  <JFXDatePicker fx:id="birthDatePicker" defaultColor="#0c9789" onAction="#birthDatePickerOnAction" onKeyReleased="#birthDatePickerOnKeyReleased" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="3" GridPane.rowIndex="7">
               <children>
                  <TextField fx:id="addressTextField" onKeyReleased="#addressTextFieldOnKeyReleased" prefWidth="400.0" promptText="Nhập địa chỉ" style="-fx-background-radius: 20;">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="9">
               <children>
                  <TextField fx:id="salaryTextField" onKeyReleased="#salaryTextFieldOnKeyReleased" prefWidth="200.0" promptText="Nhập lương" style="-fx-background-radius: 20;">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <Label text="(VNĐ)">
                     <font>
                        <Font name="System Italic" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="9">
               <children>
                  <Label text="Bộ môn">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label textFill="RED">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="3" GridPane.rowIndex="9">
               <children>
                  <ComboBox fx:id="subjectComboBox" editable="true" prefHeight="30.0" promptText=" Nhập tên bộ môn" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.rowIndex="11">
               <children>
                  <Label text="Loại cán bộ">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label text="(*)" textFill="RED">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="11">
               <children>
                  <ComboBox fx:id="roleComboBox" editable="true" prefHeight="30.0" promptText="Nhập tên loại cán bộ" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="11">
               <children>
                  <Label text="Trạng thái">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="3" GridPane.rowIndex="11">
               <children>
                  <RadioButton mnemonicParsing="false" selected="true" text="Mở">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <padding>
                        <Insets left="4.0" top="4.0" />
                     </padding>
                     <toggleGroup>
                        <ToggleGroup fx:id="isDeletedToggleGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Khóa" toggleGroup="$isDeletedToggleGroup">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" top="4.0" />
                     </padding>
                  </RadioButton>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="3" GridPane.rowIndex="13">
               <children>
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButtonOnAction" prefWidth="80.0" style="-fx-background-radius: 20; -fx-background-color: #BE2626;" text="Xóa">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  <Button fx:id="editButton" mnemonicParsing="false" onAction="#editButtonOnAction" prefWidth="120.0" style="-fx-background-radius: 20; -fx-background-color: #23DB1F;" text="Thêm">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#cancleButtonOnAction" prefWidth="80.0" style="-fx-background-radius: 20;" text="Hủy">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Label fx:id="birthErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="8">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="addressErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="8">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="salaryErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="10">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="subjectErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="10">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="roleErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="12">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="isDeletedErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="12">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="genderErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="6">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="phoneErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="6">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="nameErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="4">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="codeErrorLabel" text="Error" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="messageLabel" text="Message" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
